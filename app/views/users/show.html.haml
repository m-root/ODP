.kn-users-show
  .kn-users-show__field-header
    ชื่อเต็ม
  .kn-users-show__field-value
    = @user.first_name+@user.last_name

  .div
    เพศ
  .div
    = @user.sex
  .kn-users-show__field-header
    อีเมล
  .kn-users-show__field-value
    = @user.email

  .kn-users-show__field-header
    บทบาท
  .kn-users-show__field-value
    = @user.user_type_type

  .div
    เลขไอดี
  .div
    =@user.ext_id

  .div
    หมายเลขบัตรประชาชน
  .div
    = @user.national_id

  .div
    เบอร์โทรศัพท์
  .div
    = @user.phone_number
  -if @user.user_type_type == 'Patient'
    .div
      กรุ๊ปเลือด
      = @user.user_type.bloodType
    .div
      ประวัติแพ้ยา
      = @user.user_type.allergyRecordList
  -if @user.user_type_type == 'Doctor'
    .div
      แผนก
      = @user.user_type.proficiency


  -if current_user.user_type_type == 'Admin'
    = link_to 'แก้ไข', edit_user_path(@user), class: 'kn-button__primary'
    = link_to 'กลับ', users_path
  -else
  = link_to 'แก้ไข', edit_user_registration_path(@user)
  = link_to 'กลับ', root_path
